# ===========================================
# Project Aether Backend Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://aether:aether_secret@localhost:5432/aether?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OAuth/SSO - Okta
OKTA_ISSUER=https://your-org.okta.com/oauth2/default
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
OKTA_AUDIENCE=

# OAuth/SSO - Azure AD
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=

# Google Gemini AI
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-pro
GEMINI_MAX_TOKENS=8192

# External Integrations - SAP
SAP_BASE_URL=
SAP_CLIENT_ID=
SAP_CLIENT_SECRET=

# External Integrations - Salesforce
SALESFORCE_INSTANCE_URL=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# External Integrations - Workday
WORKDAY_BASE_URL=
WORKDAY_CLIENT_ID=
WORKDAY_CLIENT_SECRET=

# External Integrations - Snowflake
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USERNAME=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=
SNOWFLAKE_DATABASE=

# CORS
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# Logging
LOG_LEVEL=info
